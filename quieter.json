{
    // ==============================
    // Updates, confirmation dialogs
    // ==============================
    // Don't interrupt me
    "extensions.autoUpdate": false,
    // Don't ask me confirmations
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Don't track me or report crashes
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Don't bother me with updates
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "manual",

    // ================================
    // Visual annoyances/distractions
    // ================================
    // Don't show activity bar, learn the keybindings!
    "workbench.activityBar.visible": false,
    // Don't show breadcrumbs
    "breadcrumbs.enabled": false,
    // Don't shower me with suggestions
    "editor.suggest.maxVisibleSuggestions": 5,
    // Don't need these, use Ctrl/Cmd+G
    "editor.lineNumbers": "off",
    // Don't blink the cursor
    "editor.cursorBlinking": "solid",
    // Default is true
    "editor.minimap.enabled": false,
    // Don't include 'Visual Studio Code' in title bar
    "window.title": "${remoteName}${separator}${activeEditorLong}",
    // Don't show icons in explorer
    "workbench.editor.showIcons": false,
    // Don't use icons if you do use these features
    "workbench.iconTheme": null,
    "outline.icons": false,
    "breadcrumbs.icons": false,

    // ================================
    // Behaviours
    // ================================
    // Don't name file after first line if not named
    "workbench.editor.untitled.labelFormat": "name",
    // Don't show welcome screen at startup
    "workbench.startupEditor": "none",
    // Don't recommend extensions to me
    "extensions.ignoreRecommendations": true,
    // Don't ignore my .gitignore
    "search.useGlobalIgnoreFiles": true
}